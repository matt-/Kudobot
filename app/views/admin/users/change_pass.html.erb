<h3>Change Password For <%= @user.username %></h3>
<span style="color:green"><%= flash[:notice] %></span><span style="color:red"><%= flash[:error] %></span>
<%= form_for :user, :url => change_pass_admin_users_path(:id => @user.id) do |f| %>
<table>
	<tr>
		<td>Password:</td>
		<td><%= f.password_field :password %></td>
	</tr>
	<tr>
		<td>Confirm Password:</td>
		<td><%= f.password_field :password_confirmation %></td>
	</tr>
</table>
<%= f.submit :value => "Save" %> 
<input type="button" value="Cancel" onclick="window.close()">
<% end %>