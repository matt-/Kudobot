<h4>Users</h4>
<br>
<a href="/admin/users/new">Create New User</a>

<br><br>
Results : <%= @users.total_count %><br><br>
 <%= paginate @users %>
<br>
	<% unless @users.blank? %>
		<table>
			<tr>
				
			 
				<th></th>
				<th>Username</th>
				<th>First Name</th>
				<th>Last Name</th>
				<th>Email</th><th></th>
			</tr>
			<% @users.each do |u| %>
			<tr> 
				<td><img src="/images/users/<%= u.avatar %>"></td>
				<td><%= link_to u.username, edit_admin_users_path(:id => u.id) %></td>
				<td><%= u.first_name %></td>
				<td><%= u.last_name %></td>
				<td><%= u.email %></td>
				<td><%= link_to "Delete", admin_users_path(:id => u.id), :method => :delete,:confirm => "Are you sure?" %></td>
			</tr>
			<% end -%>
		</table>
		<br><br>
		 <%= paginate @users %>
	<% else %>
	No users found.
	<% end -%>